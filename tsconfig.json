{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": ".build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "../types/*"
      ],
      "../*": [
        "../*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".serverless1", ".build", "node_modules"]
}
